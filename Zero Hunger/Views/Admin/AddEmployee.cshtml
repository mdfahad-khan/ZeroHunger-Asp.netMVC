@{
    ViewBag.Title = "AddEmployee";
}

    <main class="container vh-100 d-flex align-items-center justify-content-center">
        <div class="col-md-8">
            <div class="card p-4 " style="background-color: #a5b1c2; ">
                <h2 class="text-center mb-4">ADD EMPLOYEE</h2>
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="E_name" class="form-label">Employee Name</label>
                        <input type="text" name="E_name" placeholder="Name" value="@(Model?.E_name ?? "")" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessage("E_name")</span>
                    </div>

                    <div class="mb-3">
                        <label for="E_address" class="form-label">Address</label>
                        <input type="text" name="E_address" placeholder="Address" class="form-control" value="@(Model?.E_address ?? "")">
                        <span class="text-danger">@Html.ValidationMessage("E_address")</span>
                    </div>
                    <div class="mb-3">
                        <label for="E_phone" class="form-label">Phone Number</label>
                        <input type="text" name="E_phone" placeholder="Phone Number" class="form-control" value="@(Model?.E_phone ?? "")">
                        <span class="text-danger">@Html.ValidationMessage("E_phone")</span>
                    </div>
                    <div class="mb-3">
                        <fieldset>
                            <label>Gender :</label>
                            <input type="radio" name="E_gender" value="Male" @(Model?.E_gender == "Male" ? "checked" : "") /> Male
                            <input type="radio" name="E_gender" value="Female" @(Model?.E_gender == "Female" ? "checked" : "") /> Female
                        </fieldset>
                        <span class="text-danger">@Html.ValidationMessage("E_gender")</span>
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" name="Password" placeholder="Password" class="form-control" value="@(Model?.Password ?? "")">
                        <span class="text-danger">@Html.ValidationMessage("Password")</span>
                    </div>
                    <div class="mb-3">
                        <label for="Confirm_Password" class="form-label">Confirm Password</label>
                        <input type="password" name="Confirm_Password" placeholder="Confirm Password" class="form-control" value="@(Model?.Confirm_Password ?? "")" />
                        <span class="text-danger">@Html.ValidationMessage("Confirm_Password")</span>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="ADD EMPLOYEE" class="btn btn-success" />
                    </div>
                </form>
            </div>
            <div>
            </div>
        </div>
    </main>

